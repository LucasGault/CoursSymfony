{% extends 'base.html.twig' %}

{% block title %}PersonCovid index{% endblock %}

{% block body %}
    <a href="{{ path('index') }}">Index</a>

    <h1>Personnes ayant été infecté par la Covid</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>InfectedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person_covid in person_covids %}
            <tr>
                <td>{{ person_covid.id }}</td>
                <td>{{ person_covid.infectedAt ? person_covid.infectedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('person_covid_show', {'id': person_covid.id}) }}">show</a>
                    <a href="{{ path('person_covid_edit', {'id': person_covid.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('person_covid_new') }}">Create new</a>
{% endblock %}
